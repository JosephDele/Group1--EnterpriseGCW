@model EC_SOLUTION.Models.EC_DB.Login
@{
    ViewBag.Title = "Index";
    Layout = null;
}


<!doctype html>
<html>
<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body style="background-image:url(http://www.une.edu/sites/default/files/styles/image_gallery/public/_I6T2707.JPG?itok=FfXOUC1-); background-repeat: no-repeat;background-size: cover;">
    <div class="row">
        <div class="col-lg-7">
            <div class="col-lg-7" style="padding:70px; padding-top:150px">
                <img src="https://orca.gre.ac.uk//cas/gre/img/logo_dark.png" height="100">
            </div>
        </div>
        <div class="col-lg-5" style="background:rgba(81, 107, 150,0.5);">
            <br><br>
            <blockquote>
                <p style="padding-top:20px; font-family:Tahoma; color:white;">
                    <b>

                        My time at Greenwich helped develop my technical and creative skills which form the foundation of my business enterprises,
                        including producing my own music, videos and clothing ranges.
                    </b>
                    <footer style="color:white;">
                        Jme, Jamie Adenuga Grime artist. Vegan. CEO Boy Better Know.
                        Greenwich Portraits project
                    </footer>

            </blockquote>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-7">

            <div style="height:350px; width:300px; display:block;padding:20px; padding-left:60px">
                <div style="background:rgba(81, 107, 150,0.5); height:inherit; width:inherit; padding:20px">
                    <form action='/Login/Index' method="post">
                        <div class="form-group" style="padding-bottom:15px">
                            <input type="text" placeholder="Your Username" name='Username' class="form-control">
                        </div>
                        <div class="form-group" style="padding-bottom:15px">
                            <input type="password" placeholder="Your Password" name='Password' class="form-control">
                        </div>
                        <div class="form-group" style="padding-bottom:15px">
                            <input type="submit" value="Login" class="btn btn-primary form-control">
                        </div>
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="row" style="background:rgba(81, 107, 150,0.3) ">
                                <div class="col-lg-12">
                                    <p style="font-family:Tahoma; color:red; font-size:20px"><b><em>@ViewBag.ErrorMessage</em></b></p>
                                </div>
                            </div>
                        }
                        <div class="row">
                            <div class="col-lg-3">
                                <span class="glyphicon glyphicon-wrench " style="font-size: 50px; color:white"></span>
                            </div>
                            <div class="col-lg-9">
                                <p style="color:white">
                                    <b>
                                        Regular system maintenance takes place between 07:00
                                        and 09:00 GMT+1 (BST) each Tuesday.
                                    </b>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
