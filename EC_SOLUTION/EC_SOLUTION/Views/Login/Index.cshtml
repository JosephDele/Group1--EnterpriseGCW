@model EC_SOLUTION.Models.EC_DB.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/NonAuthenticatedLayout.cshtml";
}

<div class="row-fluid">
    <div class="row-fluid">
        <div class="span12 center login-header">
            <h2>Welcome to eCLAIMS system</h2>
        </div>
    </div>
    <div class="row-fluid">
        <div class="well span5 center login-box">
            <div class="alert alert-info">
                Please login with your Username and Password.
            </div>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <fieldset>
                    <div class="input-prepend" data-rel="tooltip" data-original-title="Username">
                        <span class="add-on"><i class="icon-user"></i></span>
                        @Html.EditorFor(model => model.username, new { @class = "text-box single-line" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="input-prepend" data-rel="tooltip" data-original-title="Password">
                        <span class="add-on"><i class="icon-lock"></i></span>
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "text-box single-line", @type = "password" } })
                    </div>
                    <div class="clearfix"></div>
                    <div class="input-prepend">
                      
                    </div>
                    <div class="clearfix"></div>
                    <p class="center span5">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </p>
                </fieldset>
            }
        </div>
    </div>
</div>
