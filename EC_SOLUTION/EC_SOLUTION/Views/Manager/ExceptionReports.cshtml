@model IEnumerable<EC_SOLUTION.EC_CLAIMS>

@{
    ViewBag.Title = "ExceptionReports";
}

<h2>ExceptionReports</h2>
<br><br>
<div class="container">

    <div class="row">
        <div class="col-lg-6">
            <div class="jumbotron">
                <table class="table table-condensed table-striped table-hover table-responsive">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ACEDEMIC_YEAR.YEAR)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FACULTY.Faculty_Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.STUDENT.First_Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClaimStatu.Status)
                        </th>
                        <th></th>
                    </tr>


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ACEDEMIC_YEAR.YEAR)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FACULTY.Faculty_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.STUDENT.First_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClaimStatu.Status)
                            </td>

                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="col-lg-6">
            Pending Claims after 14 days
            <div class="jumbotron">
                <table class="table table-condensed table-striped table-hover table-responsive">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ACEDEMIC_YEAR.YEAR)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FACULTY.Faculty_Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.STUDENT.First_Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClaimStatu.Status)
                        </th>
                        <th></th>
                    </tr>


                    @foreach (var item in (new ECDB_EWDFINALEntities().EC_CLAIMS.ToList()))
                    {
                        DateTime currentdate = DateTime.Now;
                        double numofdaysdiff = (currentdate.Date - item.Date.Value).TotalDays;

                        if (numofdaysdiff >= 14 && item.ClaimStatu.Status == "Processing")
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ACEDEMIC_YEAR.YEAR)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FACULTY.Faculty_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.STUDENT.First_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClaimStatu.Status)
                                </td>

                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>

</div>
