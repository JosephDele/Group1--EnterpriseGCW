                        <li><a data-value="united" href="#"><i class="icon-blank"></i>United</a></li>
                    </ul>
                </div>
                <!-- theme selector ends -->
                <!-- user dropdown starts -->


                <div class="btn-group pull-right">
                    <div class="top-nav nav-collapse">
                        <ul class="nav">
                            @if (Session["loggedUser"] != null)
                            {
                                if (((Login)(Session["loggedUser"])).role == "ADMINISTRATOR")
                                {
                                    <li><a href="~/Student">Student</a></li>
                                    <li><a href="~/ACEDEMIC_YEAR">Acedemic Year</a></li>
                                }
                                else if (((Login)(Session["loggedUser"])).role == "COORDINATOR")
                                {
                                    <li><a href="~/coordinator">Claims</a></li>
                                }
                                else if (((Login)(Session["loggedUser"])).role == "MANAGER")
                                {
                                    <li><a href="~/Manager/Statistics">System Statistics</a></li>
                                    <li style='@(ViewBag.Page == "ExceptionReports" ? "background-color:cyan" : "")'><a href="~/Manager/ExceptionReports">Exception Reports</a></li>
                                    <li><a href="~/Manager/Claims">Claims</a></li>
                                    <li><a href="~/Manager/ScheduleReport">Schedule Report</a></li>

                                }
                                else
                                {
                                    <li><a href="~/EC_CLAIMS">Claims</a></li>
                                }
                                <li><a href="~/Login/Logout">Logout</a></li>
                            }
                            else
                            {
                                <li id="navMenu1">
                                    <a href="#" onclick="PreLogin();">Login</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <!-- (code below should be implemented if the user successfully logs in)
