    <script type="text/javascript">
        function PreLogin() {
            var strHtml = "<form action='/Login/Index' method='POST' style='margin: 0px;'><ul class='nav'>";
            strHtml += "<li><p style='margin-left: 10px; margin-top: 5px;'>Username: </p></li>";
            strHtml += "<li><input type='text' name='Username' style='margin-bottom: 0px; margin-left: 5px;'/></li>";
            strHtml += "<li><p style='margin-left: 10px; margin-top: 5px;'>Password: </p></li>";
            strHtml += "<li><input type='password' name='Password' style='margin-bottom: 0px; margin-left: 5px;'/>";
            strHtml += "<p><input name='RememberMe' type='checkbox' style='margin-left: 5px; margin-top: 5px;'/> Remember me</p></li>";
            strHtml += "<li><input type='submit' class='btn' value='Login' style='margin-left: 10px;'/></li>";
            strHtml += "</ul></form>";
            $("#navMenu1").html(strHtml);
        }
    </script>
    <style>
        input[type="submit"] {
            padding-right: 20px;
            padding-left: 20px;
